{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('application.process_review', { applicationId: applicationId }) }}" method="post">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="review" id="exampleRadios1" value="approve" required>
            <label class="form-check-label" for="exampleRadios1">
                Approve
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="review" id="exampleRadios2" value="decline">
            <label class="form-check-label" for="exampleRadios2">
                Decline
            </label>
        </div>
        <div class="form-group">
            <label for="decline_reason">Decline reason</label>
            <input type="text" class="form-control" name="decline_reason" id="decline_reason" />
        </div>
        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
    </form>
{% endblock %}

